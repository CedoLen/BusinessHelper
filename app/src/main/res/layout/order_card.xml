<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="87dp">

    <ImageView
        android:id="@+id/image_order_VM"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_orderitem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_order_VM"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/counter_order_VM"
            style="@style/textViewBlack"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="заказчик" />

        <TextView
            android:id="@+id/dates_order_VM"
            style="@style/textViewBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="даты" />

        <TextView
            android:id="@+id/status_order_VM"
            style="@style/textViewBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="статус" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>