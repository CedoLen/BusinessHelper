<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_style" parent="Widget.AppCompat.Button">
        <item name="android:height">36px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:width">200sp</item>
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:background">@drawable/main_button_shape</item>
    </style>

    <style name="styleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>
    <style name="textViewBlack" parent="styleTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edittext_style" parent="Widget.AppCompat.EditText">
        <item name="android:width">350dp</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:minHeight">52sp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:textColor">@color/textColor_edit</item>
        <item name="android:textColorHint">@color/textHintColor_edit</item>
        <item name="android:background">@drawable/main_edittext_shape</item>
    </style>

    <style name="outline_button_style" parent="Widget.AppCompat.Button">
        <item name="android:height">20px</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">14dp</item>
        <item name="android:width">200sp</item>
        <item name="android:background">@drawable/outlined_button_shape</item>
    </style>

    <style name="styleBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/main_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/textHintColor_edit</item>
    </style>
    
    <style name="floatingButtonAdd" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/dark_green</item>
        <item name="android:src">@drawable/ic_plus</item>
    </style>
    <style name="floatingButtonSave" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/dark_green</item>
        <item name="android:src">@drawable/ic_check</item>
    </style>
    <style name="floatingButtonRemove" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/red</item>
        <item name="android:src">@drawable/ic_trash</item>
    </style>

    <style name="header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_background</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="textViewField" parent="textViewBlack">
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>